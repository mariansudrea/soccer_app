<div class="rightPan gamesContainer">
	<div class="playerPic">
	</div>
	<h1 style="position:relative;float:left;margin: -10px 0 0 30px">
		<%= @player.name %>
	</h1>
	<div class="seasonDivider" style="width:700px;float:left;clear:left;margin: 15px 0 15px 5px">
	</div>
	<div class="scheduleBox newLine">
		Home
	</div>
	<div class="scheduleBox">
	</div>
	<div class="scheduleBox">
		Away
	</div>
	<div class="scheduleBox">
		Goals
	</div>
	<div class="scheduleBox">
		Assists
	</div>
	</br></br>
	<% if @player.stats.any? %>
		<% @player.stats.each do |s| %>
			<div class="scheduleBox newLine">
				<%= s.game.home_team.name %>
			</div>
			<div class="scheduleBox">
				<%= s.game.home_score %>
					-	
				<%= s.game.away_score %>
			</div>
			<div class="scheduleBox">
				<%= s.game.away_team.name %>
			</div>
			<div class="scheduleBox">
				<%= s.goals %>
			</div>
			<div class="scheduleBox">
				<%= s.assists %>
			</div>
		<% end %>
	<% end %>	

</div>
