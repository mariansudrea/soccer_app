<div class="rightPan mainContainer" style="width:900px;padding:50px">
	<div class="playerPic">
	</div>
	<h3 style="position:relative;float:left;text-decoration:none;margin: -10px 0 0 30px">
		<%= @player.name %>
	</h3>
	<div class="seasonDivider" style="width:895px;float:left;clear:left;margin: 15px 0 15px 5px">
	</div>
	<div class="playerBox newLine">
		Home
	</div>
	<div class="playerBox">
	</div>
	<div class="playerBox">
		Away
	</div>
	<div class="playerBox" style="color:white">
		Goals
	</div>
	<div class="playerBox">
		Assists
	</div>
	</br></br>
	<% if @player.stats.any? %>
		<% @player.stats.each do |s| %>
			<div class="playerBox newLine">
				<%= s.game.home_team.name %>
			</div>
			<div class="playerBox">
				<%= s.game.home_score %>
					-	
				<%= s.game.away_score %>
			</div>
			<div class="playerBox">
				<%= s.game.away_team.name %>
			</div>
			<div class="playerBox">
				<%= s.goals %>
			</div>
			<div class="playerBox">
				<%= s.assists %>
			</div>
		<% end %>
	<% end %>	

</div>
