var x = 0;
function scrollUp()
{
	if ($("#teamContainer").css("margin-top") == "0px")
		{a = setInterval(function(){moveIt()}, 4);}
}
scrollUp();
function moveIt()
{
	x+=11;
	c = "-"+x+"px";
	$('#bottomContainer').css("margin-top",c);
	if ( x >= 600 )
		{clearInterval(a);}
	
}

if ($('#bottomContainer').css('width') == undefined)
	$('#mainContainer').html("<%= escape_javascript(render(:partial => '/players/view1.html.erb')) %>");

