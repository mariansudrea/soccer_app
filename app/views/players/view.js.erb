$('#bottomContainer').html("<%= escape_javascript(render(:partial => '/players/view.html.erb')) %>");
var x = 0;
var y = 210;
function scrollUp()
{
	if ($("#teamContainer").css("margin-top") == "0px")
		{a = setInterval(function(){moveIt()}, 4);}
}
scrollUp();
function moveIt()
{
	x+=7;
	if ( y < 260 ) y+=3;
	b = "-"+x+"px";
	c = "-"+y+"px";
	$('#teamContainer').css("margin-top",b);
	$('#bottomContainer').css("margin-top",c);
	if ( x >= 205 )
		{clearInterval(a);}
	
}
