<div class="widget" style="margin:20px 0 0 25px; min-height:200px">
            <h4>EFFICIENCY</h4>
            <div style="color:black">
                <div class="assistName">
                    <b>NAME</b>
                </div>
                <div class="assistNumber">
                    <b title="Games Played"> +- </b>
                </div>
                <div class="assistNumber">
                    <b title="Games Played"> GP </b>
                </div>
            </div>
            <% @efficiencyRankings.each do |x| %>
			<% unless x[:gp].to_i < 5 and ( @seasonId.to_i == 0 and @opp == 0 ) %>
            <div class="rankingsEntry">
                <div class="assistName">
                    <%= link_to User.find(x[:id]).name.upcase, "/stats?id=0&who=1&user="+x[:id].to_s, title: "Player Details" %>
                </div>
                <div class="assistNumber">
                    <%= x[:eff] %>
                </div>
                <div class="assistNumber">
                    <%= x[:gp] %>
                </div>
            </div>
            <% end %>
            <% end %>
        </div>

