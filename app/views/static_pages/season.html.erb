<div class="mainContainer" >
	<div>
		<a href="season?id=115">season 115</a>
		<a href="season?id=116">season 116</a>
		<a href="season?id=117">season 117</a>
		<a href="season?id=119">season 119</a>
		<a href="season?id=120">season 120</a>
		<a href="season?id=121">season 121</a>
	</div>
	<h4>SEASON <%= params[:id] %></h4>
	<div style="width:1300px">
	 <div class="widget" style="margin:20px 0 20px -120px">
        <h4>GOALS</h4>
        <div style="color:black">
            <div class="assistName">
                <b>NAME</b>
            </div>
            <div class="assistNumber">
                <b title="Total Goals">GS</b>
            </div>
            <div class="assistNumber">
                <b title="Games Played">GP</b>
            </div>
            <div class="assistNumber">
                <b title="Goals Per Game">GPG</b>
            </div>
        </div>
        <% @goalRankings.compact.each do |x| %>
        <div class="rankingsEntry">
            <div class="assistName">
                <%= link_to User.find(x[:id]).name, "/players/"+x[:id].to_s, title: "Player Details" %>
            </div>
            <div class="assistNumber">
                <%= x[:goals] %>
            </div>
            <div class="assistNumber">
				<%= x[:gp] %>
            </div>
            <div class="assistNumber">
                <%= x[:gpg] %>
            </div>
        </div>
        <% end %>
    </div>
	<div class="widget" style="margin:20px 0 20px 20px;width:250px">
        <h4>ASSISTS</h4>
        <div style="color:black">
            <div class="assistName">
                <b>NAME</b>
            </div>
            <div class="assistNumber">
                <b title="Total Assists">TA</b>
            </div>
            <div class="assistNumber">
                <b title="Games Played">GP</b>
            </div>
            <div class="assistNumber">
                <b title="Assists Per Game">APG</b>
            </div>
        </div>
        <% @assistRankings.compact.each do |x| %>
        <div class="rankingsEntry">
            <div class="assistName">
                <%= link_to User.find(x[:id]).name, "/players/"+x[:id].to_s, title: "Player Details" %>
            </div>
            <div class="assistNumber">
                <%= x[:assists] %>
            </div>
            <div class="assistNumber">
				<%= x[:gp] %>
            </div>
            <div class="assistNumber">
                <%= x[:apg] %>
            </div>
        </div>
        <% end %>
	</div>
	<div class="widget" style="overflow:hide;margin:20px 0 20px 10px;padding:0;width:470px;color:black;min-height:200px;">
        <h4 style="padding:0">Results</h4>
		<% Game.where(id: @season_start[params[:id].to_i]..@season_start[params[:id].to_i+1]-1).collect.each do |s| %>
			<% if (s.home_team_id == "8" || s.away_team_id == "8") %>

				<div class="assistName" style="clear:left;width:100px;">
					<%= s.played_at.strftime("%F") %>

				</div>
				<div class="assistName" style="width:130px">
					<%= s.home_team.name %>
				</div>
				<div class="assistNumber">
					<%= s.home_score %>
				</div>
				<div class="assistNumber" style="width:20px">
					-
				</div>
				<div class="assistNumber">
					<%= s.away_score %>
				</div>
				<div class="assistName" style="width:130px">
					<%= s.away_team.name %>
				</div>
			<% end %>
		<% end %>

	</div>
</div>
 <div class="widget" style="width:922px;margin-left:-120px;">
        <h4>Standings</h4>
        <div class="standingsName">
        </div>
        <div class="standingsNumber">
            GP
        </div>
        <div class="standingsNumber">
            W
        </div>
        <div class="standingsNumber">
            T
        </div>
        <div class="standingsNumber">
            L
        </div>
        <div class="standingsNumber">
            GF
        </div>
        <div class="standingsNumber">
            GA
        </div>
        <div class="standingsNumber">
            GD
        </div>
        <div class="standingsNumber">
            PTS
        </div>
        <!--% g = @a.compact.sort_by { |hsh| hsh[:gf]-hsh[:ga] || 0 } %-->
        <% b = @a.compact.sort_by { |hsh| [ hsh[:pts]|| 0 , hsh[:gf]-hsh[:ga] ] }.reverse %>
        <% b.each do |team| %>
            <% if !(team.nil?) then %>
                <div class="standingsName">
                    <% if team[:id] == 8 %>
                        <b>
                    <% end %>
                        <%= Team.find(team[:id]).name %>
                    <% if team[:id] == 8 %>
                        </b>
                    <% end %>
                </div>
                <div class="standingsNumber">
                    <%= team[:gp]||0 %>
                </div>
                <div class="standingsNumber">
                    <%= team[:w]||0 %>
                </div>
                <div class="standingsNumber">
                    <%= team[:t]||0 %>
                </div>
                <div class="standingsNumber">
                    <%= team[:l]||0 %>
                </div>
                <div class="standingsNumber">
                    <%= team[:gf] %>
                </div>
                <div class="standingsNumber">
                    <%= team[:ga] %>
                </div>
                <div class="standingsNumber">
                    <%= team[:gf] - team[:ga] %>
                </div>
                <div class="standingsNumber standingsNumberPts">
                    <%= team[:pts]||0 %>
                </div>
            <% end %>
        <% end %>
    </div>
</div>
