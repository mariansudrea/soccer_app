<div class="rightPan mainContainer" style="padding-right:0px;width:849px">
	<div class="homeHeader"> NEWS 
	</div>	
	<div class="widget">
		<h4>Form</h4>
		<%= link_to "T", "/games/481", :class => "formItem tie" %>
		<%= link_to "W", "/games/482", :class => "formItem" %>
		<%= link_to "W", "/games/483", :class => "formItem" %>
		<%= link_to "W", "/games/484", :class => "formItem" %>
		<%= link_to "W", "/games/485", :class => "formItem" %>
		<div class="formItemSmall tie">
			May</br>1	
		</div>
		<div class="formItemSmall">
			May</br>8	
		</div>
		<div class="formItemSmall">
			May</br>15	
		</div>
		<div class="formItemSmall">
			May</br>30	
		</div>
		<div class="formItemSmall">
			Jun</br>5	
		</div>
	</div>
	<div class="homeFeed" style="padding:0;overflow:hidden">
		<iframe class="blogFrame" width="700" height="1000" src="https://fcbarunited.wordpress.com/2014/06/" frameBorder="0" seamless='seamless'>
	</iframe>
	</div>
<% if !(@nextGame.nil?) %>
	<div class="widget" style="color:black">
		<h4>Next Game</h4>
		<div class="nextGameDiv"> <%= @nextGame.away_team.name.upcase %> </div>
		<div class="nextGameDiv"> vs </div>
		<div class="nextGameDiv"> <%= @nextGame.home_team.name.upcase %> </div>
		<div class="nextGameDiv"> <%= @nextGame.played_at.strftime("%a, %b %d %H:%M") %> </div>
		<div class="nextGameDiv"> Field <%= @nextGame.field %> </div>
	</div>
<% else %>
	<div class="widget" style="color:black">
		<h4>Next Game</h4>
		<div class="nextGameDiv"> </div>
		<div class="nextGameDiv"> SCHEDULE PENDING </div>
	</div>

<% end %>
	<div class="widget">
		<h4>Goals</h4>
		<div class="assistName">
			<b>Player</b>
		</div>
		<div class="assistNumber">
			<b>GPG<b>	
		</div>
		<div class="assistNumber">
			<b>TG</b>	
		</div>
		<% @goalRankings.compact.each do |x| %>
		<div class="assistName">
	   		<%= link_to User.find(x[:id]).name, "/players/"+x[:id].to_s, title: "Player Details" %>
		</div>
		<div class="assistNumber">
			<%= x[:gpg] %>
		</div>
		<div class="assistNumber">
			<%= x[:goals] %>
		</div>
		<% end %>
	</div>
	<div class="widget">
		<h4>Assists</h4>
		<div class="assistName">
			<b>Player</b>
		</div>
		<div class="assistNumber">
			<b>APG<b>	
		</div>
		<div class="assistNumber">
			<b>TA</b>	
		</div>
		<% @assistRankings.compact.each do |x| %>
		<div class="assistName">
	   <%= link_to User.find(x[:id]).name, "/players/"+x[:id].to_s, title: "Player Details" %>
		</div>
		<div class="assistNumber">
			<%= x[:apg] %>
		</div>
		<div class="assistNumber">
			<%= x[:assists] %>
		</div>
		<% end %>

		
	</div>
	<div class="widget" style="width:922px;margin-left:-120px;">
		<h4>Standings</h4>
		<div class="standingsName">
		</div>
		<div class="standingsNumber">
			GP
		</div>
		<div class="standingsNumber">
			W
		</div>
		<div class="standingsNumber">
			T
		</div>
		<div class="standingsNumber">
			L
		</div>
		<div class="standingsNumber">
			GF	
		</div>
		<div class="standingsNumber">
			GA
		</div>
		<div class="standingsNumber">
			GD
		</div>
		<div class="standingsNumber">
			PTS
		</div>
		<!--% g = @a.compact.sort_by { |hsh| hsh[:gf]-hsh[:ga] || 0 } %-->
		<% b = @a.compact.sort_by { |hsh| [ hsh[:pts]|| 0 , hsh[:gf]-hsh[:ga] ] }.reverse %>
		<% b.each do |team|	%>
			<% if !(team.nil?) then %>
				<div class="standingsName">
					<% if team[:id] == 8 %>
						<b>
					<% end %>
						<%= Team.find(team[:id]).name %>
					<% if team[:id] == 8 %>
						</b>
					<% end %>
				</div>
				<div class="standingsNumber">
					<%= team[:gp]||0 %>
				</div>
				<div class="standingsNumber">
					<%= team[:w]||0 %>
				</div>
				<div class="standingsNumber">
					<%= team[:t]||0 %>
				</div>
				<div class="standingsNumber">
					<%= team[:l]||0 %>
				</div>
				<div class="standingsNumber">
					<%= team[:gf] %>
				</div>
				<div class="standingsNumber">
					<%= team[:ga] %>
				</div>
				<div class="standingsNumber">
					<%= team[:gf] - team[:ga] %>
				</div>
				<div class="standingsNumber standingsNumberPts">
					<%= team[:pts]||0 %>
				</div>
			<% end %>
		<% end %>
	</div>

</div>
