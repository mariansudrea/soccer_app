<games>
	<% @schedule.reverse.each do |x| %>
		<% if Time.now.getutc < x.played_at.getutc %>
		<game>
	        <homeTeamName><%= x.home_team.name %></homeTeamName>
		    <homeTeamId><%= x.home_team_id %></homeTeamId>
	        <awayTeamName><%= x.away_team.name %></awayTeamName>
	    	<awayTeamId><%= x.away_team_id %></awayTeamId>
	        <date><%= x.played_at %></date>
		</game>
		<% end %>
	<% end %>
</games>

